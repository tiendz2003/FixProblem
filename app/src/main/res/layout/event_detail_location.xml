<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_margin="15dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_location"
        app:tint="?attr/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/locationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/pro_rounded_medium"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Bac Tu Liem" />

    <TextView
        android:id="@+id/locationAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        android:maxWidth="300dp"
        android:fontFamily="@font/pro_rounded_medium"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="@+id/locationTitle"
        app:layout_constraintTop_toBottomOf="@+id/locationTitle"
        tools:text="Hoang Xa,Bac Tu Liem,Ha noi" />

    <TextView
        android:id="@+id/viewOnMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/viewOnMaps"
        android:textColor="@color/forgotPassword"
        android:textStyle="bold"
        android:fontFamily="@font/pro_rounded_medium"
        app:layout_constraintStart_toStartOf="@+id/locationAddress"
        app:layout_constraintTop_toBottomOf="@+id/locationAddress"
        android:foreground="?android:attr/selectableItemBackground" />

</androidx.constraintlayout.widget.ConstraintLayout>